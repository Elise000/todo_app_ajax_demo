<h1>My Todos</h1>

<%= form_for Todo.new, remote: true do |f| %>
  <div class="form-group">
    <%= f.text_field :description, placeholder:
    "what needs doing?" %>
  </div>

  <div class="form-group">
    <%= f.text_field :priority, placeholder: "priority level" %>
  </div>

  <div class="form-group">
  <%= f.submit 'Add Todo', :class => 'submit' %>
  </div>
<% end %>

<ul>

  <%= render @todos %>

</ul>
